pipeline {
    agent any
    tools
    {
        maven 'mvn'
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/Shantanu391/java-jenkins'
            }
        }
        stage('Compile-Package') {
            steps {
                bat 'mvn package'
            }
        }
        stage('SonarQube Analysi') {
            steps {
            withSonarQubeEnv('sonar') { 
              bat "mvn sonar:sonar"
            }
            }
        }
    }
}
